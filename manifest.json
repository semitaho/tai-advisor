{
  "name": "tAi Advisor",
  "description": "A Chrome extension that provides AI-driven advice",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html"
  },
  "permissions": ["contextMenus", "activeTab", "scripting" , "tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  }
}
